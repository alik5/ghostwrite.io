  <h1><%= @letter.letter_type.name %></h1> <br />

<%= f.fields_for :properties, OpenStruct.new(@letter.properties) do |builder| %>
  
  <% @letter.letter_type.letter_fields.each do |field| %>
  <%= render "letters/fields/#{field.field_type}", field: field, f: builder %>
  
  <% end %>
<% end %>

<% end %>
</div>


