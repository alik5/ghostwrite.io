




				<% if @letter.letter_type.name.to_s == "Networking"  %>
   
  				<%= render 'letters/templates/networking' %>

  				<% elsif @letter.letter_type.name.to_s == "Dating"  %>
   
  				<%= render 'letters/templates/dating' %>

  				<% elsif @letter.letter_type.name.to_s == "Thank You Note"  %>
   
  				<%= render 'letters/templates/thank_you' %>

  				<% elsif @letter.letter_type.name.to_s == "To Senator/State Official"  %>
   
  				<%= render 'letters/templates/to_senate' %>

  				<% elsif @letter.letter_type.name.to_s == "Sympathy Note"  %>
   
  				<%= render 'letters/templates/sympathy' %>

  				<% elsif @letter.letter_type.name.to_s == "Cover Letter"  %>
   
  				<%= render 'letters/templates/cover_letter' %>

 				<% else %>
 				
 				<%= simple_form_for(@letter, :html => { class: "form-horizontal", :multipart => true }) do |f| %>
					<h2 class= "header_text"></h2>
  						<div class="fieldset">
  							<div class="container" id="form-container">
								<div class="row"> 	
									<div class="col-md-11">
  
										<%= render 'form' %>

											
										</div>

				
								</div>	
							</div>

				<div class"nextElement">

					<div class="contsnextprev"><span class="next floatright">Continue <i class="fa fa-angle-double-right fa-3x"></i></span></div>
					<div class="contsnextprev" style="display:none;"><span class="prev floatleft">Back <i class="fa fa-angle-double-left fa-3x"></i></span></div>

					<div class="green">
					  <%= f.submit %>
					</div>	  
				
		<%= link_to 'Back', :back %>
				</div>


				<% end %>

	</div>

			<% end %>
				
	 







  

  