<p id="notice"><%= notice %></p>

<div class="row">

<% if @letter.letter_type.name.to_s == "Cover Letter"  %>
   
  <%= render 'letters/templates/cover_letter' %>

 <% elsif @letter.letter_type.name.to_s == "Networking"  %>

  <%= render 'letters/templates/networking' %>

 <% elsif @letter.letter_type_id.to_s == "Thank You Note" %>

  <%= render 'letters/templates/thank_you' %>

 <% elsif @letter.letter_type_id.to_s == "Dating" %>

  <%= render 'letters/templates/dating' %>

 <% elsif @letter.letter_type_id.to_s == "Get Back in Touch" %>

 <%= render 'letters/templates/back_in_touch' %>

 <% elsif @letter.letter_type_id == 9 %>

  	<%= render 'letters/templates/feedback' %>

 <% else %>

  	 <%= render 'letters/templates/progress' %>

 <% end %>


  <%= render 'job_listings' %>

</div>

<div class="row col-md-12">
	<%= link_to 'Edit', edit_letter_path(@letter) %> |
	<%= link_to 'Back', letter_path %>
</div>

