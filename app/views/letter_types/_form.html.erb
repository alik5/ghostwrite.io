<%= simple_form_for(@letter_type) do |f| %>
  <%= f.error_notification %>

  

  <%= f.fields_for :letter_fields do |builder| %>
   <%= f.input :name, placeholder:"Letter Name" %>
   <%= f.input :category, collection: [ 1, 2] %>
    <%= render 'letter_field_fields', f: builder %>
	<% end %>
	<%= link_to_add_fields "Add Field", f, :letter_fields %>

	<div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>

