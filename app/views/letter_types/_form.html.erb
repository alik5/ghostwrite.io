<%= simple_form_for(@letter_type) do |f| %>
  <%= f.error_notification %>

  

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  

  <%= f.fields_for :fields do |builder| %>
  <%= render 'field_fields', f: builder %>
	<% end %>
	<%= link_to_add_fields "Add Field", f, :fields %>

	<div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>
