<fieldset>
  <%= f.select :field_type, %w[question_field check_box] %>
  <%= f.text_field :name, placeholder: "question_text" %>
  <%= f.check_box :required %> <%= f.label :required %>
  <%= f.hidden_field :_destroy %>
  <%= fields_for :answers do |builder| %>
  <%= render 'answer_fields', f: builder %>
  <%= link_to "remove", '#', class: "remove_fields" %>
</fieldset>
<% end %>