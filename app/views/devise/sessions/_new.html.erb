

    <div class="first-column">
       <!-- Your first column here -->
  
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>


           <%= f.input :email, :class => "input-class", :wrapper_html => {class: "input-append"} do %>
                <%= f.input_field :email, placeholder: "email" %>
              <span class="add-on"><i class="fa fa-envelope-o"></i></span>
            <% end %>

            <%= f.input :password, :wrapper_html => {class: "input-append"} do %>
                <%= f.input_field :password, placeholder: "password" %>
              <span class="add-on"><i class="fa fa-key"></i></span>
            <% end %>

          

            </div>
    <div class="second-column">
       <!-- Your second column here -->
  

          <%= button_tag(type: 'submit', class: "btn btn-default btn-lg") do %>
           <span class="lock"><i id="lock" class="fa fa-lock"></span></i><span class="lock" style="display:none"><i class="fa fa-unlock"></i></span>
          <% end %> 

           </div>  

        <% end %>
                      
         
    

        
         
        
    
         