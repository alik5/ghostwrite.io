<!-- Session Modal -->
<div id="ajax-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
   <div class="modal-content">
    <div class='modal-header'>
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3 class="modal-title">SIGN UP</h3>  
    </div>
    <div class='modal-body'>

       <!-- Your first column here -->
  
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>


           <%= f.input :email, :class => "input-class", :wrapper_html => {class: "input-append"} do %>
                <%= f.input_field :email, placeholder: "Email" %>
              <span class="add-on"><i class="fa fa-envelope-o fa-2x"></i></span>
            <% end %>

            <%= f.input :password, :wrapper_html => {class: "input-append"} do %>
                <%= f.input_field :password, placeholder: "Password" %>
              <span class="add-on"><i class="fa fa-key fa-2x"></i></span>
            <% end %>
  

          <%= button_tag(type: 'submit', class: "btn btn-default btn-lg", id: "sign-up") do %>
           <span class="lock"><i id="lock" class="fa fa-lock"></span></i><span class="lock" style="display:none"><i class="fa fa-unlock"></i></span>
          <% end %> 

           </div>  

        <% end %>

        </div>
      </div>
    </div> 
  </div>
                      
         
    

        
         
        
    
         