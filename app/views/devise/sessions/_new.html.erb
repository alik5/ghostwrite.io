<!-- Modal -->
<div id="ajax-modal" class="modal hide fade" tabindex="-1">
  <div class='modal-header'>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title">LOG IN</h3>
    
    
  </div>
  <div class='modal-body'>
<div class="ghostgirl-modal"><%=image_tag "ghostgirl.svg" %></div>

    <div class="first-column">
       <!-- Your first column here -->
  
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

           <%#= f.input :email, label: false, placeholder: "Email" %>

           <%= f.input :email, :wrapper_html => {class: "input-append"} do %>
                <%= f.input_field :email, placeholder: "email" %>
              <span class="add-on"><i class="fa fa-envelope-o"></i></span>
            <% end %>

            <%= f.input :password, :wrapper_html => {class: "input-append"} do %>
                <%= f.input_field :password, placeholder: "password" %>
              <span class="add-on"><i class="fa fa-key"></i></span>
            <% end %>

          

            </div>
    <div class="second-column">
       <!-- Your second column here -->
  

          <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
           <i class="fa fa-lock"></i> 
          <% end %> 

           </div>  

        <% end %>
                      
         </div>
        </div>
    

        
         
        
    
         