<!-- Sign Up Modal -->
<div id="ajax-modal-2" class="modal fade" tabindex="-1">
  <div class='modal-header'>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title">SIGN UP</h3>  
  </div>
    <div class='modal-body'>
 
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
         <div class="first-column">
        <br>
        <%= f.input :first_name, label: false, placeholder: "First Name" %> 
        <%= f.input :last_name, label: false, placeholder: "Last Name" %>
        <%= f.input :profile_name, label: false, placeholder: "Profile Name" %>
        <%= f.input :email, label: false, placeholder: "Email" %>


        <% if @validatable %>
        <i style="display:none">(<%= @minimum_password_length %> characters minimum)</i>
        <% end %>
        <%= f.input :password, autocomplete: "off", label: false, placeholder: "Password", hint: false, error_html: { id: 'password_error'} %>
        <%= f.input :password_confirmation, autocomplete: "off", label: false,  placeholder: "Password confirmation"%>

        </div>

      <div class="second-column">
         <%= button_tag(type: 'submit', class: "btn btn-default btn-lg", id: "sign-up") do %>
           <span class="lock"><i id="lock" class="fa fa-lock"></span></i><span class="lock" style="display:none"><i class="fa fa-unlock"></i></span>
          <% end %> 
      </div>

    <% end %>
     
   
      </div> 
    </div>
      
 


