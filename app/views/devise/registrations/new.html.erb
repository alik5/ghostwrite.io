
<div class="container">
   <div class="row"> 
      <div class="col-md-4">
        <div class="form_body">
 


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <h2 class= "header_text">Sign up</h2>
  <fieldset class="fieldset">
    <br>
    <%= f.input :first_name, label: false, placeholder: "First Name" %> 
    <%= f.input :last_name, label: false, placeholder: "Last Name" %>
    <%= f.input :profile_name, label: false, placeholder: "Profile Name" %>
    <%= f.input :email, label: false, placeholder: "Email" %>
    <% if @validatable %>
    <i>(<%= @minimum_password_length %> characters minimum)</i>
    <% end %>
    <%= f.input :password, autocomplete: "off", label: false, placeholder: "Password" %>
    <%= f.input :password_confirmation, autocomplete: "off", label: false,  placeholder: "Password confirmation"%>

    <div>
    <%= f.submit "Sign up" %>
  </div>
  </fieldset class="fieldset">

<% end %>
 
<%= render "devise/shared/links" %>
   
      </div> 
    </div>   
  </div>
 </div>


