<div class="container-fluid">
  <div class="row">
  	 
	   <div class="col-md-12">
			<h1> CONFIRMATION </h1>

			<div> 

			<h2><%= @ghostwrite.title %></h2>

			<h3><%= @ghostwrite.string %></h3>

			<h3><%= @ghostwrite.content %></h3>

			<p><%= @ghostwrite.wisi_box %></p>

			</div>


			<div>
			   
			    <%= link_to "My Attachment", @ghostwrite.photo.url %>

			</div>

			<div class="payment">

			<%#= render 'charges/form' %>

			</div>
		</div>
	</div>


			<form action="" method="POST" id="payment-form">
				  <span class="payment-errors"></span>

				  <div class="form-row">
				    <label>
				      <span>Card Number</span>
				      <input type="text" size="20" data-stripe="number"/>
				    </label>
				  </div>

				  <div class="form-row">
				    <label>
				      <span>CVC</span>
				      <input type="text" size="4" data-stripe="cvc"/>
				    </label>
				  </div>

				  <div class="form-row">
				    <label>
				      <span>Expiration (MM/YYYY)</span>
				      <input type="text" size="2" data-stripe="exp-month"/>
				    </label>
				    <span> / </span>
				    <input type="text" size="4" data-stripe="exp-year"/>
				  </div>

				  <button type="submit">Submit Payment</button>
				</form>
			
			<div class = "bottom">
			<%= link_to 'Edit', edit_ghostwrite_path(@ghostwrite) %> |
			<%= link_to 'Back', ghostwrites_path %>
		</div>

</div>
	
	
