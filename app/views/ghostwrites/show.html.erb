<div class="container-fluid">
  <div class="row">
  	 <%= image_tag "confirmation.png", :class => "header-logo" %>
	   <div class="col-md-12">
	   		<div class="col-md-5" id="confirmation-box">
				<ul class="confirmation-list">

					<li><h3><%= @ghostwrite.title %> --> your name</h3></li>

					<li><h3><%= @ghostwrite.string %> --> your email</h3></li>

					<li><h3><%= @ghostwrite.content %> --> when you need it by</h3></li>
					<li><h3><%= link_to "My Attachment", @ghostwrite.photo.url %></h3></li>

				</ul>
			</div>
			<div class="col-md-1"></div>
			<div class="col-md-5 hint-box">
				<h3>Preview</h3>
				   	<p class="wisi-box-prev"><%= @ghostwrite.wisi_box %></p>
				   	
			</div>


		</div>
		
		  <div class="col-md-12">
		  	<div class="pay-buttons">
		  		<h3><i class="fa fa-cc-stripe fa-2x"></i> Payment </h3> 
				<div class="col-md-3" id="col-3">
					<h3>  500 words or less <h3>
					<%= render "charges/form1" %>
				</div>
				<div class="col-md-3" id="col-3">
					<h3>  500 words - 1000 words <h3>
					<%= render "charges/form2" %>
				</div>
				<div class="col-md-3" id="col-3">
					<h3>  1000+ words <h3>
					<%= render "charges/form3" %>
				</div>
					
			</div>
		</div>
	</div>
</div>

	
	
